.btn
  height: 55px
  width 100%
  user-select: none
  position: relative
  display: flex;
  justify-content: center
  align-items: center
  overflow: hidden
  color: $color-white
  border-radius: 91px
  text-transform: uppercase
  background: $color-green
  // box-shadow: inset 0px 14px 11px 0px rgba(255, 255, 255, 0.4),inset 0px -3px 0px 0px rgba(0, 0, 0, 0.25),0px 14px 20px 0px rgb(84, 0, 20)
  font-family: "Mont-SemiBold"
  font-weight: 600
  font-size: 16px;
  line-height: 140%
  transition transform 0.5s, top 0.8s
  +above($breakpoints.sm)
    font-size: 16px;
    height: 60px;
  +above($breakpoints.md)
    font-size: 18px;
    height: 65px

  &:hover
    transform: scale(1.02)

  &:active
    top: 3px

  &::before
    content: ""
    position: absolute
    top: 0;
    height: 100%;
    width: 36px;
    transform: skewX(-45deg)
    left: -150%
    pointer-events: none
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.4));
    animation: flareAnimation 4s infinite ease-in;
    vendord = official
    @keyframes flareAnimation
      0%
          left: -150%
      100% 
          left: 250%

  &--beige
    background: $color-beige







