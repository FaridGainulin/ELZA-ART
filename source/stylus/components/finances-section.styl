.finances-section
  &__container
    position relative
    padding 40px 0 20px 0
    +above($breakpoints.lg)
      padding 120px 0 120px 0

  &__image-stars
    display: none
    +above($breakpoints.md)
      display: block
      position: absolute
      z-index 1
      width 250px
      height: auto
      top: 31px;
      left: -35px;
    +above($breakpoints.lg)
      width 250px
      height: auto
      top: 175px;
      left: -35px;
    +above($breakpoints.xxl)
      width 522px
      height: 333px
      top: 90px;
      left: -241px;

  &__title
    padding-bottom: 20px
    +above($breakpoints.lg)
      padding-bottom: 80px

  &__cards
    +above($breakpoints.md)
      position relative
      z-index 2
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content center
      gap: 20px
      padding-bottom 20px
    +above($breakpoints.xxl)
      padding-bottom 56px
      column-gap: 20px
      row-gap: 44px


  &__card
    width 280px !important
    height: 180px
    border: 1px solid $color-beige
    border-radius: 20px
    padding 30px 30px 36px 30px
    display: flex
    flex-direction: column
    justify-content space-between
    background-color #fff
    box-shadow: 0px 34px 40.2px 0px rgba(138, 127, 118, 0.25);
    +above($breakpoints.sm)
      width 300px !important
    +above($breakpoints.md)
      width 380px !important

  &__card-image
    display: none
    +above($breakpoints.md)
      display: block
      width 380px
      height: 180px
      border: 1px solid $color-beige
      border-radius: 20px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 20px
    width 100%
    max-width: 400px
    margin 0 auto
    +above($breakpoints.md)
      flex-direction: row
      margin 0
      max-width: 100%

  &__arrows
    display: flex
    flex-direction: row
    justify-content center
    gap: 66px
    +above($breakpoints.md)
      flex-direction: column
    +above($breakpoints.xxl)
      margin 0 47px 0 86px
    

  &__info-card
    width 100%
    max-width: 601px
    background-color $color-beige
    border-radius: 20px
    padding 20px
    text-align: center
    display: flex
    flex-direction: column
    gap: 20px
    +above($breakpoints.md)
      gap: 35px
      text-align: start
      padding 59px 20px 41px 20px
    +above($breakpoints.lg)
      padding 59px 52px 41px 58px

  &__form
    width 100%
    background-color $color-beige
    border-radius: 20px
    padding 20px
    display: flex
    flex-direction: column
    gap: 10px
    +above($breakpoints.md)
      max-width: 378px
    +above($breakpoints.lg)
      padding 30px 49px

  &__swiper
    +above($breakpoints.md)
      perspective: none


.item-finances
  width 100%
  max-width 259px




