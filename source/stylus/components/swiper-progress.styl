.swiper-progress-small
  position relative !important
  height: 6px !important
  overflow: hidden
  background: #F4EEE9
  margin: 14px 0 0 0
  border-radius: 10px !important
  +above($breakpoints.sm)
    display: none
  .swiper-pagination-progressbar-fill
    border-radius: 10px !important
    background: linear-gradient(to right, #1C8437, #BAAE8C)

