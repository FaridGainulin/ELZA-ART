@font-face
  font-family: "Inter-SemiBold"
  src: url('../fonts/InterTight-SemiBold.woff'), url('../fonts/InterTight-SemiBold.woff2')
  font-display: swap

@font-face
  font-family: "Manrope-Bold"
  src: url('../fonts/Manrope-Bold.woff'), url('../fonts/Manrope-Bold.woff2')
  font-display: swap
@font-face
  font-family: "Manrope-Medium"
  src: url('../fonts/Manrope-Medium.woff'), url('../fonts/Manrope-Medium.woff2')
  font-display: swap

@font-face
  font-family: "Mont-Bold"
  src: url('../fonts/Mont-Bold.woff'), url('../fonts/Mont-Bold.woff2')
  font-display: swap
@font-face
  font-family: "Mont-Light"
  src: url('../fonts/Mont-Light.woff'), url('../fonts/Mont-Light.woff2')
  font-display: swap
@font-face
  font-family: "Mont-Regular"
  src: url('../fonts/Mont-Regular.woff'), url('../fonts/Mont-Regular.woff2')
  font-display: swap
@font-face
  font-family: "Mont-SemiBold"
  src: url('../fonts/Mont-SemiBold.woff'), url('../fonts/Mont-SemiBold.woff2')
  font-display: swap
@font-face
  font-family: "Mont-SemiBoldItalic"
  src: url('../fonts/Mont-SemiBoldItalic.woff'), url('../fonts/Mont-SemiBoldItalic.woff2')
  font-display: swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin: 0 auto
  font-size: 18px
  font-family: "Mont-Regular"
  font-weight: 400
  line-height: 120%
  color #2E2932

.layout
  width: 100%
  height: 100%
  margin: 0 auto
  display: flex
  flex-direction: column
  overflow-x: hidden

.main
  flex: 1

.wrapper
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1220px





